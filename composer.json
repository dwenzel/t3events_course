{
  "name": "cpsit/t3events_course",
  "type": "typo3-cms-extension",
  "description": "Courses is an extension for the TYPO3 CMS. It extends t3events by functionality for managing courses.",
  "keywords": [
    "TYPO3",
    "extension",
    "events",
    "course"
  ],
  "license": [
    "GPL-2.0+"
  ],
  "authors": [
    {
      "name": "Dirk Wenzel",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.2",
    "typo3/cms-core": ">=8.7.0 || >=9.5.0 || >=10.4.0",
    "dwenzel/t3events": "dev-feature/version10compatible",
    "dwenzel/t3extension-tools": "~1.3 || >=10.4.0",
    "typo3/minimal": ">=9"
  },
  "require-dev": {
    "nimut/testing-framework": "^3.0 || ^4.0"
  },
  "autoload": {
    "psr-4": {
      "CPSIT\\T3eventsCourse\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CPSIT\\T3eventsCourse\\Tests\\": "Tests"
    }
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin",
    "preferred-install": {
      "typo3/cms": "source",
      "*": "dist"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .Build/Web/typo3conf/ext/",
      "mkdir -p .Build/log/coverage/",
      "[ -L .Build/Web/typo3conf/ext/t3events_course ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/t3events_course"
    ]
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "t3events_course",
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web"
    }
  }
}
